{
  "display_information": {
    "name": "Deluxe"
  },
  "features": {
    "bot_user": {
      "display_name": "Deluxe",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/finance-bot",
        "url": "https://slack.remote.deluxehomes.ae/slack/events",
        "description": "Send message to Finance Channel",
        "should_escape": false
      },
      {
        "command": "/support-bot",
        "url": "https://slack.remote.deluxehomes.ae/slack/events",
        "description": "Send message to Guest Support Channel",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "channels:read",
        "chat:write",
        "chat:write.customize",
        "chat:write.public",
        "commands",
        "files:read",
        "files:write",
        "groups:history",
        "groups:read",
        "users:read",
        "incoming-webhook"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://slack.remote.deluxehomes.ae/slack/events",
      "bot_events": ["message.channels", "message.groups"]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://slack.remote.deluxehomes.ae/slack/events"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
